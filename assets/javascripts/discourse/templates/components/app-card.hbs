<div class="app-contents">
  <div class="app-title">
    <div class="p-text medium">
      {{app-title app}}
    </div>
    {{#if showAddApp}}
      {{d-button class=btnClasses action='addApp' label=btnLabel disabled=app.user_added}}
    {{/if}}
  </div>
  <div class="app-image">{{icon-or-image app.image_url}}</div>
  <div class="app-about">{{app-about app}}</div>
  <div class="app-gutter">
    <div class="app-version">{{app.version}}</div>
    <div class="app-authors">
      {{#each authors as |a|}}
        <a href="{{concat '/u/' a}}" data-user-card="{{a}}">{{a}}</a>
      {{/each}}
    </div>
    {{#if app.rating_topic}}
      <div class='app-rating'>
        <a href='{{app.rating_topic.url}}'>
          {{star-rating-raw app.rating_topic.average_rating clickable=true}}
          <span class="exact-rating">{{average-rating app.rating_topic}}</span>
        </a>
      </div>
    {{/if}}
  </div>
</div>
